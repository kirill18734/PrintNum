{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    "core:window:allow-set-size",
    "shell:allow-open",
    {
      "identifier": "shell:allow-spawn",
      "allow": [
        {
          "name": "run_backend",
          "cmd": "powershell.exe",
          "args": [
            "Start-Process",
            "-FilePath",
            "../backend/output/backend.exe",
            "-WindowStyle",
            "Hidden"
          ]
        }
      ]
    }
  ]
}
